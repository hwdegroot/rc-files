#!/bin/bash
set -e +x

REPO=${REPO:-"docker-virtual.artifactory.srv.hq.mendix.net"}

cat <<REPO
Using default repo: $REPO
To change the default repository, set a variable 'REPO'
export REPO=my-repo
REPO


wd=`mktemp -d -p $(dirname $0)`
pushd $wd
IMAGE=${@: -1}
cat <<-DOCKERFILE > Dockerfile
FROM $REPO/$IMAGE
USER root
#RUN [[ -z '`getent group 1000`' ]] && addgroup -g 1000 test
RUN adduser -D -g test -u 1000 test
RUN rsync -r /home/jenkins/ /home/test/
RUN chown -R test:1000 /home/test
USER test
DOCKERFILE

docker build -t $IMAGE .
rm -rf $wd
popd
docker run -it --rm -u test:test -v `pwd`:`pwd` -w `pwd` ${@:1:$(($#-1))} $IMAGE

