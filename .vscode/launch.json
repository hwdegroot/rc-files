    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9000
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000
        },
        {
            "name": "Attach PHP inside docker",
            "type": "php",
            "request": "attach",
            "port": 9001,
            "address": "localhost",
            "restart": true,
            "sourceMaps": false,
            "outFiles": [],
            "localRoot": "${workspaceRoot}/public",
            "remoteRoot": "${workspaceRoot}/public"
        },
        {
            "name": "Attach PHP",
            "type": "php",
            "request": "attach",
            "port": 9000,
            "address": "localhost",
            "restart": true,
            "sourceMaps": false,
            "outFiles": [],
            "localRoot": "${workspaceRoot}/public",
            "remoteRoot": "${workspaceRoot}/public"
        }
    ]
}