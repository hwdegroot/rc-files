#!/usr/bin/env bash

wget -q http://download.virtualbox.org/virtualbox/debian/oracle_vbox.asc -O- | sudo apt-key add -
sh -c 'echo "deb http://download.virtualbox.org/virtualbox/debian trusty contrib" >> /etc/apt/sources.list.d/virtualbox.list'

cat <<-EOF >> /etc/apt/sources.list
  # contrib repo for virtualbox
  deb http://httpredir.debian.org/debian/ jessie main contrib
EOF

apt-get update
apt-get -y install linux-headers-$(uname -r|sed 's,[^-]*-[^-]*-,,') dkms virtualbox
