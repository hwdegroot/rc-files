#!/usr/bin/env bash

cat <<EOF > /etc/systemd/system/suspend@.service
[Unit]
Description=Starts i3lock at suspend time
Before=sleep.target

[Service]
User=%I
Type=forking
Environment=DISPLAY=:0
ExecStartPre=
ExecStart=/usr/bin/i3lock -c 000000 -i ~/.config/i3/Pictures/LockScreen.png -p default -d -n

[Install]
WantedBy=sleep.target
EOF
